@{
    var nombreVista = ViewContext.View.Path; // Esto da la ruta completa
    var appsJson = System.Text.Json.JsonSerializer.Serialize(ViewBag.UserMenu);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Intranet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- link rel="stylesheet" href="~/css/site.css" asp-append-version="true" / -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<script>
    var mbaseUrl = '@Url.Content("~/")';
</script>
<body>

    <nav class="navbar navbar-expand-sm navbar-light border-bottom box-shadow mb-3" style="background-color:#0BBBEC">
        <div class="container-fluid">
            <!-- a class="navbar-brand" href="/Home/RedirectHome" -->
             <a class="navbar-brand" asp-controller="Home" asp-action="RedirectHome">
                <img src="~/imagenes/acronimo_FMedicina.svg" alt="Logo" />
                @*<img src="https://fmedicina.ucr.ac.cr/wp-content/uploads/2019/01/acronimo_medicina_2019.svg"> *@
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon bg-white"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <div id="divmenuApps">
                </div>
            </div>
            <div class="d-flex" style="float:right;">
                <img src="~/imagenes/imgInventarios.png" />
            </div>

            <div id="divalerts" class="d-flex">
                <!-- a class="nav-link text-white" asp-controller="Home" asp-action="Index">ZZ&nbsp;</a -->
            </div>
            <div class="d-flex">
                &nbsp;
                <!-- a class="nav-link text-white" href="javascript:;" onclick="ShowHelpWindow('nombreVista')">Ayuda</a -->
            </div>
            <div class="d-flex ms-auto col-1 ">&nbsp;
                <a class="nav-link text-white" asp-controller="Home" asp-action="Logout">Cerrar sesión</a>
                <!-- a class="nav-link text-white" href="/Home/Logout">Cerrar sesión</a -->
            </div>
        </div>
    </nav>

    <div class="container" style="height:725px;overflow-y: scroll">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Intranet - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
<script>
    $("#divmenuApps").html(GenerarMenu(@Html.Raw(appsJson)));
</script>
</html>
