<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FM Facultad de Medicina</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <div class="header-top bg-white py-2">
            <div class="container">
                <div class="logo-container">
                    <div class="d-flex align-items-center">
                        <img src="https://fmedicina.ucr.ac.cr/wp-content/uploads/2019/01/acronimo_medicina_2019.svg" alt="Logo FM" height="50" class="me-3">
                    </div>
                </div>
            </div>
        </div>

        <nav class="navbar navbar-expand-sm navbar-dark" style="background-color: #00C0F3;">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item mx-2">
                            <a class="nav-link" asp-page="/Index">Inicio</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link" asp-controller="Activos" asp-action="Index">Ver activos</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link" asp-controller="Activos" asp-action="Create">Registrar activo</a>
                        </li>
                    </ul>
                 
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>