@using BlazorStrap
@using static UCR.ECCI.PI.ThemePark_UCR.Presentation.Blazor.Pages.ModifyAccessPoint
@using UCR.ECCI.PI.ThemePark_UCR.DomainWeb.LearningSpace.Entities
@using UCR.ECCI.PI.ThemePark_UCR.DomainWeb.Shared.ValueObjects;
@code {
    [Parameter]
    public Guid LsGuid { get; set; }
    [Parameter]
    public EventCallback<Guid> LsGuidChanged { get; set; }
    [Parameter]
    public IEnumerable<LearningSpaces> Elements { get; set; }
}

<div class="spacing">
    <BSLabel><h3>Nombre del Espacio de Aprendizaje</h3></BSLabel>
    <BSInput InputType="InputType.Select" @bind-Value="LsGuid" @onchange="async e => await LsGuidChanged.InvokeAsync(LsGuid)" class="dropdown-CLS">
        <option value="null">Nombre del espacio</option>
        @foreach (var name in Elements)
        {
            <option value="@name.LearningSpaceId.Value">@name.LearningSpaceName.Value</option>
        }
    </BSInput>
</div>



