@code {
    [Parameter]
    public BuildingInfo building { get; set; }
}

<BSLabel Class="spacing"><h4>Colores</h4></BSLabel>
<div class="spacing"></div>
<BSRow Position="BlazorStrap.Position.Relative">
    <div class="color-picker">
        <BSContainer>
            <BSRow Justify="BlazorStrap.V5.Justify.Start">
                <BSCol Column="2">Paredes</BSCol>
                <BSCol Column="2">
                    <BSInput InputType="BlazorStrap.InputType.Color" @bind-Value="building.WallsColor" class="input-color" />
                </BSCol>
                <BSCol Column="2">Techo</BSCol>
                <BSCol Column="2">
                    <BSInput InputType="BlazorStrap.InputType.Color" @bind-Value="building.RoofColor" class="input-color" />
                </BSCol>
            </BSRow>
        </BSContainer>
    </div>
</BSRow>
