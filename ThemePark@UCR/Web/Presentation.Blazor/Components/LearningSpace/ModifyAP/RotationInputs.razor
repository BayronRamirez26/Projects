@using static UCR.ECCI.PI.ThemePark_UCR.Presentation.Blazor.Pages.ModifyAccessPoint
@using BlazorStrap
@code {
    [Parameter] public double RotationX { get; set; }
    [Parameter] public EventCallback<double> RotationXChanged { get; set; }
    [Parameter] public double RotationY { get; set; }
    [Parameter] public EventCallback<double> RotationYChanged { get; set; }
}

<BSRow Position="Position.Relative">
    <BSCol ColumnSmall="4">
        <h3 style="font-size: 20px">Rotación</h3>
    </BSCol>
</BSRow>
<BSRow Position="Position.Relative">
    <BSCol ColumnSmall="2">
        <BSLabel><h3 style="font-size: 18px">X</h3> </BSLabel>
        <BSInput InputType="BlazorStrap.InputType.Number" @bind-Value="RotationX" @onchange="@(async (e) => await RotationXChanged.InvokeAsync(Convert.ToDouble(e.Value)))" />
    </BSCol>
    <BSCol ColumnSmall="2">
        <BSLabel><h3 style="font-size: 18px">Y</h3> </BSLabel>
        <BSInput InputType="BlazorStrap.InputType.Number" @bind-Value="RotationY" @onchange="@(async (e) => await RotationYChanged.InvokeAsync(Convert.ToDouble(e.Value)))" />
    </BSCol>
</BSRow>
