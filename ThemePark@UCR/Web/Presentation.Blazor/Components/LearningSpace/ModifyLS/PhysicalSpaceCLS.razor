@using BlazorStrap
@using static UCR.ECCI.PI.ThemePark_UCR.Presentation.Blazor.Pages.ModifyLearningSpace
@code {
    [Parameter] public LearningSpace LearningSpace { get; set; }
}

<div class="spacing">
    <BSRow Position="Position.Relative">
        <BSLabel><h3>Espacio Físico</h3></BSLabel>
        <BSCol ColumnSmall="3">
            <BSLabel><h3 style="font-size: 20px">Profundidad</h3> </BSLabel>
            <BSInput InputType="BlazorStrap.InputType.Number" step="any" @bind-Value="LearningSpace.sizeX" />
            <BSLabel><h3 style="font-size: 20px">Altura</h3> </BSLabel>
            <BSInput InputType="BlazorStrap.InputType.Number" step="any" @bind-Value="LearningSpace.sizeY" />
            <BSLabel><h3 style="font-size: 20px">Ancho</h3> </BSLabel>
            <BSInput InputType="BlazorStrap.InputType.Number" step="any" ValidateOnInput="true" @bind-Value="LearningSpace.sizeZ" />
        </BSCol>
    </BSRow>
</div>
